%h1 Список кинотеатров
.table-responsive
  %table.table.table-hover.table-striped.center
    %thead
      %tr
        %th Название
        %th Адрес
        %th
        %th
        %th

    %tbody
      - @cinemas.each do |cinema|
        %tr
          %td= cinema.name
          %td= cinema.address
          %td
            = link_to cinema, class: 'btn btn-success' do
              = fa_icon :eye
          %td
            = link_to edit_cinema_path(cinema), class: 'btn btn-info' do
              = fa_icon :edit
          %td
            = link_to cinema, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
              = fa_icon :times

  %br

  = link_to 'Новый кинотеатр', new_cinema_path
