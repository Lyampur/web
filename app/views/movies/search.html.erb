<%= form_tag search_movies_path(), method: :get do %>
<%= text_field_tag 'search[name]', params['search']['name'] %>
<%= text_field_tag 'search[genre]', params['search']['genre'] %>
<%= submit_tag 'Поиск' %>
<% end %>
<% @movies.each do |s| %>
<br/>
<%= s.name %>
<br/>
<%= s.genre %>
<br/>
<%= s.duration %>
<br/>
<%= s.country %>
<br/>
<% end %>
