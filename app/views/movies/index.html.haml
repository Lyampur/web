%h1 Список фильмов
.table-responsive
  %table.table.table-hover.table-striped.center
    %thead
      %tr
        %th Имя
        %th Жанр
        %th Продолжительность
        %th Страна
        %th Компания
        %th Возрастное ограничение
        %th
        %th
        %th

    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.name
          %td= movie.genre
          %td= movie.duration
          %td= movie.country
          %td= movie.company
          %td= movie.age_rating
          %td
            = link_to movie, class: 'btn btn-success' do
              = fa_icon :eye
          %td
            = link_to edit_movie_path(movie), class: 'btn btn-info' do
              = fa_icon :edit
          %td
            = link_to movie, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
              = fa_icon :times

  %br

  = link_to 'Новый фильм', new_movie_path
