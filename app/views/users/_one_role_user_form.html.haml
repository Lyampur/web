.col-md-6
  .panel.panel-success
    .panel-heading
      Роль
      = i
    .panel-body
      .row
        .col-md-6
          .form-group
            = fr.label :role_id
            = fr.select :role_id,
            options_for_select(role_options, fr.object.role_id),
            {}, class: 'form-control'
            = fr.error_messages_for :role_id
        .col-md-6
          .form-group
            = fr.label :data
            = fr.text_field :data, class: 'form-control'
            = fr.error_messages_for :data
